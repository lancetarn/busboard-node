extends layout

block body
	div(class="navbar navbar-inverse navbar-fixed-top", role="navigation")
		div.container
			div.navbar_header
				a.navbar-brand(href='/') BusBoard
			div.navbar-collapse
				ul.nav.navbar-nav(ng-controller="NavCtrl")
					li(ng-hide="user")
						a(ng-click="open('Login')") Login
					li(ng-show="user")
						a(ng-click="logout()") Logout
					li(ng-hide="user")
						a(ng-click="open('Register')") Register

	flash:messages
	div.container(role="main", ng-view)


	script(src='js/lib/angular/angular.js')
	script(src='js/lib/angular/angular-route.js')
	script(src='js/lib/angular/angular-cookies.js')
	script(src='js/angular-flash.js')
	script(src='js/services.js')
	script(src='js/controllers.js')
	script(src='js/filters.js')
	script(src='js/directives.js')
	script(src='js/app.js')
	script(src='js/ui-bootstrap.js')
	script(src='js/ui-bootstrap-tpls.js')
