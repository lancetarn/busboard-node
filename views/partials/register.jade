div.container
	div.modal_header
		h2 Register
	div.modal_body
		form(name="register")
			label(for="newuser") New Username
			input(type="text", ng-model="$parent.newuser", name="newuser")
			label(for="newpass") New Password
			input(type="password", ng-model="$parent.newpass", name="newpass")
	div.modal_footer
			button(ng-click="addUser()") Register
